@model UCRS.Model.Course

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="frameInside">
    <h4 class="listTitle">Add New Course</h4>
    <hr />
    <div id="stList" class="stList">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="courseTitle">
                @Html.ValidationSummary(true)
                <div class="form-group">
                    @Html.LabelFor(model => model.Name, new { @class = "courseName" })
                    @Html.EditorFor(model => model.Name, new { @class = "inputFieldCourse" })
                    @Html.ValidationMessageFor(model => model.Name)
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Back to Course List", "Index")
        </div>
    </div>
</div>